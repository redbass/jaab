<div class="row" ng-controller="employeesController">
    <a href="#/companies" type="button" class="btn btn-link pull-left">
            back to companies list
        </a><br>
    <h1>Employees of [[company.name]]</h1>

    <div class="col-md-8">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tr ng-repeat="emp in employees"
                class="company-row"
                ng-click="selectEmployee(emp)"
                ng-class="{'success': employee.id == emp.id}"
                ng-click="selectCompany(emp)">
                <td>[[$index + 1 ]]</td>
                <td>[[emp.name]]</td>
                <td>[[emp.role]]</td>
            </tr>
        </table>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>[[employee.name]]</strong>
            </div>
            <table class="table">
                <tr>
                    <td>
                        <b>Role:</b> [[employee.role]]
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Address:</b><br>[[employee.address]]
                    </td>
                </tr>
                <tr>
                    <td><b>Telephone:</b> [[employee.tel]]</td>
                </tr>
                <tr>
                    <td><b>Email:</b> [[employee.email]]</td>
                </tr>
                <tr>
                    <td>
                        <div class="btn-group  pull-right" role="group">
                            <a href="#/companies/[[companyId]]/employees/[[employees.indexOf(employee)]]/edit"
                               class="btn btn-default" type="submit" alt="edit">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                 Edit
                            </a>
                            <button class="btn btn-danger" ng-click="delete_employee([[employees.indexOf(employee)]])">
                                <span class="glyphicon glyphicon-remove" alt="Delete"></span>
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <a href="#/companies/[[companyId]]/employees/add"
           class="btn btn-success pull-right">
            New Employee
        </a>
    </div>
</div>
