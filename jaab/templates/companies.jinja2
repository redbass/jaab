<div class="row" ng-controller="companiesController">
    <h1>Companies</h1>
    <div class="col-md-8">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tr ng-repeat="comp in companies"
                class="company-row"
                ng-class="{'success': company.id == comp.id}"
                ng-click="selectCompany(comp)">
                <td>[[comp.id]]</td>
                <td>[[comp.name]]</td>
                <td>[[comp.description]]</td>
            </tr>
        </table>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>[[company.name]]</strong>
            </div>
            <table class="table">
                <tr>
                    <td>
                        <b>Address:</b><br>[[company.address]]
                    </td>
                </tr>
                <tr>
                    <td><b>Telephone:</b> [[company.tel]]</td>
                </tr>
                <tr>
                    <td><b>Email:</b> [[company.email]]</td>
                </tr>
                <tr>
                    <td>
                        <a href="#/companies/[[company.id]]/employees" class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Employees
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
