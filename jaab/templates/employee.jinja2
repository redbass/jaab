<div class="row" ng-controller="editEmployeeController">
    <h1>[[action]] employee</h1>
    <form ng-submit="postEmployee(action, employee, companyId, emplyeeId)">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Jon Doe" ng-model="employee.name">
        </div>
        <div class="form-group">
            <label for="role">Role</label>
            <input type="text" class="form-control" id="role" placeholder="The boss" ng-model="employee.role">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <textarea class="form-control" id="address"
                   placeholder="1/6 Albion Road Edinburgh EH& 5nb" rows="4" ng-model="employee.address"></textarea>
        </div>
        <div class="form-group">
            <label for="telephone">Telephone</label>
            <input type="text" class="form-control" id="telephone" placeholder="07 876432142" ng-model="employee.tel">
        </div>
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="example@test.org" ng-model="employee.email">
        </div>
        <button type="submit" class="btn btn-default">Update</button>
        <a href="#/companies/[[companyId]]/employees" type="button" class="btn btn-link">Cancel</a>
    </form>
</div>
